<Window x:Class="templomok_10_19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:templomok_10_19"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="templeImage" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Height="300" Width="400" />
        
        <TextBlock x:Name="templeInfoTextBlock" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,20" Text="Temple Info" FontFamily="Garamond" FontWeight="Bold" FontSize="23" />

        
            <Button HorizontalAlignment="Right"  Click="PreviousButton_Click" Height="200" Width="50">
                <Image Source="jobb.png"></Image>
            </Button>
            <Button HorizontalAlignment="Left"  Click="NextButton_Click"  Height="200" Width="50">
                <Image Source="bal.png"></Image>
            </Button>
        
    </Grid>
</Window>
